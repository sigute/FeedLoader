<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:divider="?android:attr/dividerHorizontal"
              android:orientation="horizontal"
              android:showDividers="middle"
              tools:context=".PostListActivity">

    <!--
    This layout is a two-pane layout for the Posts
    master/detail flow.
    
    -->

    <fragment
        android:id="@+id/fragment_feed"
        android:name="com.github.sigute.feedloader.fragments.listfragment.FeedFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@android:layout/list_content"/>

    <FrameLayout
        android:id="@+id/post_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

    <TextView
        android:id="@+id/text_view_feed_error"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="15dp"
        android:background="@color/accent"
        android:padding="10dp"
        android:text="@string/placeholder_error"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/light_text"/>

</LinearLayout>
